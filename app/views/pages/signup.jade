extends ../layout
block content
    .container
        .row
            .col-md-7
                form(method="POST",action="/user/signup")      
                    .form-group
                        label(for="signupName") 用户名
                        input#signupName.form-control(type="text",name="name")
                    .form-group
                        label(for="signupPassword") 密码
                        input#signupPassword.form-control(type="password",name="name")
                .modal-footer
                    button.btn.btn-default(type="button",data-dismiss="modal") 关闭   
                    button.btn.btn-success(type="submit") 提交