extends ../layout
block content
    .container
        .row
            .col-md-7
                embed(src="#{movie.flash}",allowFullScreen="true",quality="high",width="100%",height="400",align="middle",type="application/x-shockwave-flash")
                hr
                form(method="post",action="/user/comment")
                    input(type="hidden",name="movie",value="#{movie._id}")
                    input(type="hidden",name="from",value="#{user._id}")
                    .form-group
                        textarea.form-control(name="content",row="3")
                    button.btn.btn-primary(type="submit")    
            .col-md-5
                dl.dl-horizontal
                    dt 电影名字
                    dd #{movie.title}
                    dt 导演
                    dd #{movie.doctor}
                    dt 国家
                    dd #{movie.country}
                    dt 语言
                    dd #{movie.language}
                    dt 上映年份
                    dd #{movie.year}
                    dt 简介
                    dd #{movie.summary}